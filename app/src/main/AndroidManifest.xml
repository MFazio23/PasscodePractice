<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="dev.mfazio.passcodepractice">

    <application
        android:allowBackup="false"
        android:icon="@mipmap/mdi_pound_box_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/mdi_pound_box_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="dev.mfazio.passcodepractice.SettingsActivity"
            android:label="@string/title_activity_settings"
            android:parentActivityName="dev.mfazio.passcodepractice.MainActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="dev.mfazio.passcodepractice.MainActivity" />
        </activity>
        <activity
            android:name="dev.mfazio.passcodepractice.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <action android:name="android.intent.action.VIEW" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>